FROM node:20-alpine

# Install pnpm globally
RUN npm install -g pnpm

# Set working directory
WORKDIR /app

# Install dependencies early to leverage Docker cache
COPY package*.json ./
RUN pnpm install

# Copy the rest of the source code
COPY . .

# Expose dev port
EXPOSE 8000

# Use a dev command (e.g., nodemon or ts-node-dev)
CMD ["pnpm", "dev"]
